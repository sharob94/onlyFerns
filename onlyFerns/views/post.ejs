  <%- include('./partials/head'); %>
  <link rel="stylesheet" href="/post.css" />

  <body>
    <%- include('./partials/header'); %>
    <div class="container overflow-hidden pt-4">
      <div class="row d-flex justify-content-center">
        <% messages.reverse().forEach(post => {%>
        <div class="col-12 d-flex justify-content-center">
          <div
            class="card mb-3 align-self-center d-flex align-items-center"
            style="min-width: 20rem; width: 40rem"
          >
            <div
              class="overflow-hidden d-flex align-items-center"
              style="height: 30rem"
            >
              <a href="/post/<%=post._id%>">
                <img
                  src="/images/uploads/<%= post.img %>"
                  class="card-img-top img"
                  alt=""
                />
              </a>
            </div>
            <div class="card-body align-self-start overflow-hidden">
              <div class="message overflow-hidden">
                <a href="/page/<%=post.posterId%>">
                  <h5 class="card-title"><%= post.name %></h5>
                </a>

                <p class="card-text"><%= post.msg %></p>

                <p class="card-text">
                  <small class="text-muted" data-id="<%= post._id %>">
                    <span><%= post.thumbUp %></span>
                    <span
                      ><i class="fa fa-seedling" aria-hidden="true"></i
                    ></span>
                  </small>
                </p>
              </div>
            </div>
          </div>
        </div>
        <% }) %>
        <div class="p-0" style="min-width: 20rem; width: 40rem">
          <form class="input-group mb-3 p-0" action="/comment" method="POST">
            <input type="hidden" name="postId" value="<%=messages[0]._id%>" />
            <input
              type="text"
              name="comment"
              class="form-control"
              placeholder="Comment"
            />
            <button
              class="btn btn-outline-secondary px-2"
              type="submit"
              id="button-addon2"
            >
              <i class="fas fa-chevron-circle-right"></i>
            </button>
          </form>
          <!-- !comments section -->
          <div class="d-flex flex-column commentSection overflow-auto">
            <% comments.forEach( comment => {%>
            <span class="my-2"
              ><strong> <%= comment.postedBy %></strong>: <%= comment.comment
              %></span
            >
            <%})%>
          </div>
        </div>
      </div>
    </div>

    <footer class="text-center text-white" style="background-color: white">
      <!-- Grid container -->
      <div class="container pt-4">
        <!-- Section: Social media -->
        <section class="mb-4">
          <!-- Facebook -->
          <a
            class="btn-link btn-floating btn-lg text-dark m-1"
            href="#!"
            role="button"
            data-mdb-ripple-color="dark"
            ><i class="fab fa-facebook-f"></i
          ></a>

          <!-- Twitter -->
          <a
            class="btn-link btn-floating btn-lg text-dark m-1"
            href="#!"
            role="button"
            data-mdb-ripple-color="dark"
            ><i class="fab fa-twitter"></i
          ></a>

          <!-- Google -->
          <a
            class="btn-link btn-floating btn-lg text-dark m-1"
            href="#!"
            role="button"
            data-mdb-ripple-color="dark"
            ><i class="fab fa-google"></i
          ></a>

          <!-- Instagram -->
          <a
            class="btn-link btn-floating btn-lg text-dark m-1"
            href="#!"
            role="button"
            data-mdb-ripple-color="dark"
            ><i class="fab fa-instagram"></i
          ></a>
        </section>
        <!-- Section: Social media -->
      </div>
      <!-- Grid container -->

      <!-- Copyright -->
      <div class="text-center text-dark p-3" style="background-color: white">
        Â© 2021
      </div>
    </footer>
    <script src="/post.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>

