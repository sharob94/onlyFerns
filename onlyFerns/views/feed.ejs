<html lang="en">
  <%- include('./partials/head'); %>
  <link rel="stylesheet" href="/feed.css" />
  <body>
    <!-- header -->
    <%- include('./partials/header'); %>

    <!-- main -->
    <div class="container overflow-hidden pt-4">
      <div class="row d-flex justify-content-center">
        <% messages.reverse().forEach(post => {%>
        <div class="col-12 d-flex justify-content-center">
          <div
            class="card mb-3 align-self-center d-flex align-items-center"
            style="min-width: 20rem; width: 40rem"
          >
            <div
              class="overflow-hidden d-flex align-items-center"
              style="height: 30rem"
            >
              <a href="/post/<%=post._id%>">
                <img
                  src="/images/uploads/<%= post.img %>"
                  class="card-img-top img"
                  alt=""
                />
              </a>
            </div>
            <div class="card-body align-self-start">
              <div
                class="
                  message
                  d-flex
                  flex-column
                  align-items-start
                  justify-content-start
                "
              >
                <a href="/page/<%=post.posterId%>">
                  <h5 class="card-title"><%=post.name%></h5>
                </a>
                <a href="/post/<%=post._id%>">
                  <p class="card-text"><%=post.msg %></p>
                </a>
                <p class="card-text">
                  <small class="text-muted" data-id="<%= post._id %>">
                    <span><%= post.thumbUp %></span>
                    <span
                      ><i class="fa fa-seedling" aria-hidden="true"></i
                    ></span>
                  </small>
                </p>
              </div>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

